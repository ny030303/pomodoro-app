// backend-indexer/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // ⬅️ [변경] "postgresql"에서 "mysql"로 수정
  url      = env("DATABASE_URL")
}

// EffortLog 모델은 변경할 필요 없이 그대로 둡니다.
model EffortLog {
  id        String   @id @default(cuid())
  signature String   @unique
  user      String   @db.VarChar(44) // MySQL에서도 VarChar(44)는 유효합니다.
  sessions  Int      @default(1)
  timestamp DateTime
  createdAt DateTime @default(now())
}